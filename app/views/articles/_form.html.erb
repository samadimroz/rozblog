<%= form_with model: article do |form| %>
    <div class= "field">
        <%= form.label :title %>
        <%= form.text_field :title %>
    </div>
    <div class= "field">
        <%= form.label :body %>
        <%= form.text_field :body %>
    </div>
    <div>
        <%= form.label :status %><br>
        <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
    </div>
    <div class= "actions">
        <%= form.submit "Publish" %>
    </div>
<% end %>